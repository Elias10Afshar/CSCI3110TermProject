@model CSCI3110TermProject.Data.JobApplication
@{
    ViewData["Title"] = "Details";
}
<h1>@ViewData["Title"]</h1>
<dl class="row">
    <dt class="col-sm-2">Company Name</dt>
    <dd class="col-sm-10">@Model.CompanyName</dd>
    <dt class="col-sm-2">Position</dt>
    <dd class="col-sm-10">@Model.Position</dd>
    <dt class="col-sm-2">Date Applied</dt>
    <dd class="col-sm-10">@Model.DateApplied.ToShortDateString()</dd>
</dl>

<h4>Tags</h4>
@if (Model.JobApplicationTags.Any())
{
    <ul>
        @foreach (var jt in Model.JobApplicationTags)
        {
            <li>@jt.Tag.Name</li>
        }
    </ul>
}
else
{
    <p><em>No tags assigned.</em></p>
}

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

