@model CSCI3110TermProject.Data.JobApplication
@{
    ViewData["Title"] = "Delete Job Application";
}
<h1>@ViewData["Title"]</h1>
<h3>Are you sure you want to delete this?</h3>
<dl class="row">
    <dt class="col-sm-2">Company Name</dt>
    <dd class="col-sm-10">@Model.CompanyName</dd>
    <dt class="col-sm-2">Position</dt>
    <dd class="col-sm-10">@Model.Position</dd>
    <dt class="col-sm-2">Date Applied</dt>
    <dd class="col-sm-10">@Model.DateApplied.ToShortDateString()</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

